<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :"タイトル", style: "display: block" %>
    <%= form.text_field :tite %>
  </div>

  <div>
    <%= form.label :"開始日", style: "display: block" %>
    <%= form.date_field :start_at %>
  </div>

  <div>
    <%= form.label :"終了日", style: "display: block" %>
    <%= form.date_field :end_at %>
  </div>

  <div>
    <%= form.label :"終日", style: "display: block" %>
    <p>終日の場合はチェックを入れます</p>
    <%= form.check_box :is_all_day %>
  </div>
  
  <div>
    <%= form.label :"スケジュールメモ", style: "display: block" %>
    <%= form.text_area :introduction %>
  </div>

  <div>
    <%= form.submit "登録完了する" %>
  </div>
<% end %>

<style>
input[type="checkbox"] { width: auto; }


</style>